<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degrad"
    tools:context=".TelaUsu">

    <View
        android:id="@+id/rostousu"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/containerusu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_user"
        app:layout_constraintTop_toTopOf="@id/rostousu"
        app:layout_constraintEnd_toEndOf="@id/rostousu"
        app:layout_constraintStart_toStartOf="@id/rostousu"
        app:layout_constraintBottom_toBottomOf="@id/rostousu"
        />

    <ImageView
        android:id="@+id/nomeuser"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_user"
        app:layout_constraintTop_toBottomOf="@id/rostousu"
        app:layout_constraintStart_toStartOf="parent"
        />
    <ImageView
        android:id="@+id/emailuser"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_email"
        app:layout_constraintTop_toBottomOf="@id/nomeuser"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/nomenome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daniel Vitor"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toBottomOf="@id/rostousu"
        app:layout_constraintStart_toStartOf="@id/nomeuser"
        />
    <TextView
        android:id="@+id/emailemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emailteste@hotmail.com"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toBottomOf="@id/rostousu"
        app:layout_constraintStart_toStartOf="@id/nomeuser"
        />
    <Button
        android:id="@+id/bt_deslogar"
        android:text="Deslogar"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:layout_margin="20dp"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/emailemail"

        />

    <TextView
        android:id="@+id/bt_ircadasitens1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Ir_Cadastro_Itens"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_deslogar"
        android:padding="40dp"
        android:textSize="20sp"
        android:textStyle="bold"


        />



</androidx.constraintlayout.widget.ConstraintLayout>